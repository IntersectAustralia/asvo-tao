<tao>
  <workflow>
    <schema-version>2</schema-version>

    <light-cone id="light-cone">
      <geometry>light-cone</geometry>
      <box-repetition>unique</box-repetition>
      <rng-seed>0</rng-seed>
      <redshift-min>0.01</redshift-min>
      <redshift-max>0.06</redshift-max>
      <ra-min>0</ra-min>
      <ra-max>5</ra-max>
      <dec-min>0</dec-min>
      <dec-max>5</dec-max>
      <output-fields>
        <item>globalindex</item>
	<item>posx</item>
	<item>posy</item>
	<item>posz</item>
      </output-fields>
    </light-cone>

    <csv id="csv">
      <filename>result.0.csv</filename>
      <fields>
	<item>globalindex</item>
	<item>posx</item>
	<item>posy</item>
	<item>posz</item>
        <item>ra</item>
        <item>dec</item>
      </fields>
      <parents>
        <item>light-cone</item>
      </parents>
    </csv>

    <record-filter>
      <filter>
        <filter-attribute>None</filter-attribute>
        <filter-min>0</filter-min>
        <filter-max>0</filter-max>
      </filter>
    </record-filter>

  </workflow>

  <subjobindex>0</subjobindex>
  <logdir>log</logdir>
  <outputdir>output</outputdir>
  <database>millennium_mini_balanced_v3</database>
</tao>
