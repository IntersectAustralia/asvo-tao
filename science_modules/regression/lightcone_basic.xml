<tao>
  <workflow>
    <schema-version>2</schema-version>

    <light-cone id="light-cone">
      <geometry>light-cone</geometry>
      <box-repetition>random</box-repetition>
      <rng-seed>0</rng-seed>
      <redshift-min>0.01</redshift-min>
      <redshift-max>0.06</redshift-max>
      <ra-min>0</ra-min>
      <ra-max>10</ra-max>
      <dec-min>0</dec-min>
      <dec-max>10</dec-max>
      <output-fields>
        <item>snapnum</item>
        <item>pos_x</item>
        <item>pos_y</item>
        <item>pos_z</item>
      </output-fields>
    </light-cone>

    <csv id="csv">
      <parents>
        <item>light-cone</item>
      </parents>
      <filename>result.lightcone.csv</filename>
      <fields>
        <item>snapnum</item>
        <item>posx</item>
        <item>posy</item>
        <item>posz</item>
        <item>redshift_cosmological</item>
        <item>redshift_observed</item>
      </fields>
    </csv>

    <record-filter>
      <filter>
        <filter-attribute>None</filter-attribute>
        <filter-min>0</filter-min>
        <filter-max>0</filter-max>
      </filter>
    </record-filter>

  </workflow>

  <subjobindex>0</subjobindex>
  <logdir>log</logdir>
  <outputdir>output</outputdir>
  <database>millennium_mini_3servers_v4</database>
</tao>
