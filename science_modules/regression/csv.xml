<tao>
  <workflow>
    <schema-version>2</schema-version>

    <light-cone id="light-cone">
      <geometry>light-cone</geometry>
      <box-repetition>random</box-repetition>
      <redshift-min>0.01</redshift-min>
      <redshift-max>0.02</redshift-max>
      <rng-seed>0</rng-seed>
      <ra-min>0</ra-min>
      <ra-max>10</ra-max>
      <dec-min>0</dec-min>
      <dec-max>10</dec-max>
      <output-fields>
        <item>pos_x</item>
        <item>pos_y</item>
        <item>pos_z</item>
      </output-fields>
    </light-cone>

    <csv id="csv">
      <filename>result</filename>
      <fields>
        <item>pos_x</item>
        <item>pos_y</item>
        <item>pos_z</item>
	<item>distance</item>
	<item>redshift_cosmological</item>
      </fields>
      <parents>
        <item>light-cone</item>
      </parents>
    </csv>

  </workflow>

  <subjobindex>0</subjobindex>
  <logdir>log</logdir>
  <outputdir>output</outputdir>
  <database>millennium_mini_hdf5_dist</database>
</tao>
