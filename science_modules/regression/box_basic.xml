<tao>
  <workflow>
    <schema-version>2</schema-version>

    <light-cone id="light-cone">
      <geometry>box</geometry>
      <box-repetition>unique</box-repetition>
      <rng-seed>0</rng-seed>
      <query-box-size>10</query-box-size>
      <redshift>2.0700273232</redshift>
      <output-fields>
        <item>pos_x</item>
        <item>pos_y</item>
        <item>pos_z</item>
      </output-fields>

      <record-filter>
        <filter>
          <filter-attribute>None</filter-attribute>
          <filter-min>0</filter-min>
          <filter-max>0</filter-max>
        </filter>
      </record-filter>
    </light-cone>

    <csv id="csv">
      <filename>result</filename>
      <fields>
        <item>posx</item>
        <item>posy</item>
        <item>posz</item>
      </fields>
      <parents>
        <item>light-cone</item>
      </parents>
    </csv>

  </workflow>

  <subjobindex>0</subjobindex>
  <logdir>log</logdir>
  <outputdir>output</outputdir>
  <database>millennium_mini_hdf5_dist</database>
</tao>
