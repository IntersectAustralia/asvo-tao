<tao>
  <workflow>
    <schema-version>2</schema-version>

    <light-cone id="light-cone">
      <geometry>box</geometry>
      <box-repetition>unique</box-repetition>
      <rng-seed>0</rng-seed>
      <query-box-size>10</query-box-size>
      <redshift>0</redshift>
      <output-fields>
        <item>pos_x</item>
        <item>pos_y</item>
        <item>pos_z</item>
        <item>coldgas</item>
        <item>metalscoldgas</item>
        <item>diskscaleradius</item>
      </output-fields>
    </light-cone>

    <sed id="sed">
      <parents>
        <item>light-cone</item>
      </parents>
      <ages-file>m05/ages.dat</ages-file>
      <wavelengths-file>m05/wavelengths.dat</wavelengths-file>
      <metallicities-file>m05/metallicities.dat</metallicities-file>
      <single-stellar-population-model>m05/ssp.ssz</single-stellar-population-model>
    </sed>

    <dust id="dust">
      <parents>
	<item>sed</item>
      </parents>
      <model>Slab</model>
    </dust>

    <filter id="filter">
      <parents>
        <item>dust</item>
      </parents>
      <bandpass-filters>
        <item>Johnson/Johnson_V.dati</item>
      </bandpass-filters>
    </filter>

    <csv id="csv">
      <filename>result</filename>
      <fields>
        <item>posx</item>
        <item>posy</item>
        <item>posz</item>
        <item>Johnson/Johnson_V.dati_apparent</item>
      </fields>
      <parents>
        <item>light-cone</item>
      </parents>
    </csv>

  </workflow>

  <subjobindex>0</subjobindex>
  <logdir>log</logdir>
  <outputdir>output</outputdir>
  <database>millennium_mini_balanced_v3</database>
</tao>
